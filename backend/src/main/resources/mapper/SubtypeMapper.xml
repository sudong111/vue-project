<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.backend.repository.GuitarSubtypesRepository">

    <insert id="insertGuitarSubtypes" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO guitar_subtypes (category_id, name)
        VALUES (#{category_id}, #{name})
    </insert>

    <select id="selectAll" resultType="com.example.backend.model.Subtype">
        SELECT * FROM guitar_subtypes
    </select>

    <select id="findByName" parameterType="string" resultType="com.example.backend.model.Subtype">
        SELECT * FROM guitar_subtypes WHERE name = #{name}
    </select>

    <select id="findById" parameterType="int" resultType="com.example.backend.model.Subtype">
        SELECT * FROM guitar_subtypes WHERE id = #{id}
    </select>

</mapper>